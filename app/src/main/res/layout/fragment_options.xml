<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_15sdp"
    android:background="@drawable/gradiant_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/imageg"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:src="@drawable/coin"
        android:scaleType="fitXY"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/whiteText"
        app:layout_constraintTop_toBottomOf="@id/dismissButton"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/imageg"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/intersemibold"
        app:layout_constraintTop_toBottomOf="@id/dismissButton"
        android:id="@+id/whiteText"
        android:text="sfasfme"
        android:textSize="24sp"
        android:textAlignment="center"
        android:textColor="@color/white"

        android:textStyle="italic"
        android:layout_marginTop="@dimen/_10sdp"
        />
    <ImageView

        android:id="@+id/imageg2"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/coin"
        android:scaleType="fitXY"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/whiteText"
        app:layout_constraintTop_toBottomOf="@id/imageg"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/imageg2"
        app:layout_constraintEnd_toStartOf="@id/imgCoin"
        android:fontFamily="@font/intersemibold"
        app:layout_constraintTop_toBottomOf="@id/whiteText"
        android:id="@+id/whiteText2"
        android:text="sfasfme"
        android:textSize="16sp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="italic"
      android:layout_marginTop="@dimen/_30sdp"
        />
    <ImageView
        android:id="@+id/imgCoin"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/coin"
        app:layout_constraintEnd_toStartOf="@id/coinText"
        android:scaleType="fitXY"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/whiteText2"
        app:layout_constraintTop_toBottomOf="@id/imageg"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/imgCoin"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/intersemibold"
        app:layout_constraintTop_toBottomOf="@id/whiteText"
        android:id="@+id/coinText"
        android:text="sfasfme"
        android:textSize="16sp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="italic"
        android:layout_marginTop="@dimen/_30sdp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="@dimen/_20sdp"
        android:layout_margin="@dimen/_5sdp"
        android:layout_height="@dimen/_20sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@color/white"
        android:background="@android:drawable/ic_menu_close_clear_cancel"
        android:id="@+id/dismissButton"/>
    <EditText
        android:paddingStart="@dimen/_8sdp"
        android:textCursorDrawable="@drawable/cursor_drawable"
        android:layout_marginStart="@dimen/_20sdp"
        android:textColor="@color/white"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_width="0dp"
        android:inputType="number"
        android:hint="Type Number"
        android:textColorHint="@color/silver"
        android:layout_height="@dimen/_42sdp"
        android:background="@drawable/edit_text_outline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintTop_toBottomOf="@id/imgCoin"
        app:layout_constraintBottom_toTopOf="@id/applyButton"
        android:id="@+id/numberET"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="0dp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_height="@dimen/_40sdp"
        android:id="@+id/applyButton"
        android:layout_marginTop="@dimen/_19sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Buy Coin(s)"
        android:layout_marginBottom="@dimen/_20sdp"
        app:layout_constraintTop_toBottomOf="@id/numberET"
        android:textColor="@color/white"
        android:background="@drawable/blue_button"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>