<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
 <androidx.constraintlayout.widget.ConstraintLayout
     android:layout_width="0dp"
     android:id="@+id/pickerLayout"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintTop_toTopOf="parent"
     app:layout_constraintBottom_toTopOf="@id/tvMid"
     android:background="@drawable/edit_text_outline"
     android:layout_marginStart="@dimen/_10sdp"
     android:layout_marginEnd="@dimen/_10sdp"
     android:layout_height="wrap_content">

     <TextView
         android:id="@+id/loginTV"
         android:layout_width="0dp"
         android:layout_height="@dimen/_22sdp"
         android:background="@drawable/blue_button"
         android:text="Logins"
         android:textAlignment="center"
         android:textColor="@color/white"
         android:textSize="@dimen/_12sdp"
         android:fontFamily="@font/interregular"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintEnd_toStartOf="@id/transTV"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="parent"/>
     <TextView
         app:layout_constraintStart_toEndOf="@id/loginTV"
         android:layout_width="0dp"
         app:layout_constraintEnd_toStartOf="@id/adsTV"
         android:textColor="@color/gray"
         android:id="@+id/transTV"
        android:textAlignment="center"
         android:text="Transactions"
         android:textSize="@dimen/_12sdp"
         app:layout_constraintTop_toTopOf="parent"
         android:fontFamily="@font/interregular"

         app:layout_constraintBottom_toBottomOf="parent"
         android:layout_height="@dimen/_22sdp"/>
     <TextView
         app:layout_constraintEnd_toEndOf="parent"
         android:id="@+id/adsTV"
         android:textColor="@color/gray"
         android:text="Ads Watched"
         android:textAlignment="center"
         android:textSize="@dimen/_12sdp"
         android:fontFamily="@font/interregular"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintStart_toEndOf="@id/transTV"
         android:layout_width="0dp"
         android:layout_height="@dimen/_22sdp"/>
 </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:text="1"
        app:layout_constraintTop_toBottomOf="@id/pickerLayout"
        app:layout_constraintBottom_toTopOf="@id/tvMid"
        app:layout_constraintStart_toStartOf="@id/tvMid"
        app:layout_constraintEnd_toEndOf="@id/tvMid"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sdp"
        android:fontFamily="@font/interbold"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"/>
    <TextView
        android:text="2"
        app:layout_constraintTop_toBottomOf="@id/pickerLayout"
        app:layout_constraintBottom_toTopOf="@id/tvLeft"
        app:layout_constraintStart_toStartOf="@id/tvLeft"
        app:layout_constraintEnd_toEndOf="@id/tvLeft"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sdp"
        android:fontFamily="@font/interbold"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"/>
    <TextView
        android:text="3"
        app:layout_constraintTop_toBottomOf="@id/pickerLayout"
        app:layout_constraintBottom_toTopOf="@id/tvRight"
        app:layout_constraintStart_toStartOf="@id/tvRight"
        app:layout_constraintEnd_toEndOf="@id/tvRight"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sdp"
        android:fontFamily="@font/interbold"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/leaderboardRV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLeft"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="-52dp" />

    <TextView
        android:layout_width="@dimen/_78sdp"
        android:layout_height="@dimen/_32sdp"
        android:lines="2"
        android:paddingTop="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pickerLayout"
        android:background="@drawable/rank_tree_outline"
        android:text="1000 \n username"
        android:textAlignment="center"
        android:id="@+id/tvLeft"
        android:layout_marginTop="@dimen/_45sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="0dp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_height="@dimen/_32sdp"
        android:paddingTop="@dimen/_3sdp"
        android:lines="2"
        app:layout_constraintStart_toEndOf="@id/tvLeft"
        app:layout_constraintEnd_toStartOf="@id/tvRight"
        app:layout_constraintTop_toBottomOf="@id/pickerLayout"
        android:background="@drawable/rank_outline"
        android:text="1000 \n username"
        android:id="@+id/tvMid"
        android:layout_marginTop="@dimen/_35sdp"
        android:textAlignment="center"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="@dimen/_78sdp"
        android:paddingTop="3dp"
        android:layout_height="@dimen/_32sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pickerLayout"
        android:background="@drawable/rank_two_outline"
        android:text="1000 \n username"
        android:lines="2"
        android:id="@+id/tvRight"
        android:layout_marginTop="@dimen/_45sdp"
        android:textAlignment="center"
        android:layout_marginEnd="@dimen/_16sdp"
        android:textColor="@color/white"/>
</androidx.constraintlayout.widget.ConstraintLayout>