<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradiant_background"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/_16sdp"
        android:id="@+id/white_container"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/_50sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/image_button"
            android:layout_width="0dp"
            android:layout_height="@dimen/_42sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="fitXY"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="30dp"
            android:src="@drawable/button"/>
        <TextView
            android:id="@+id/registerTVbottom"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="@id/image_button"
            app:layout_constraintEnd_toEndOf="@id/image_button"
            app:layout_constraintTop_toTopOf="@id/image_button"
            app:layout_constraintBottom_toBottomOf="@id/image_button"
            android:textColor="@color/white"
            android:text="@string/reset_password"
            android:paddingTop="@dimen/_5sdp"
            android:textAlignment="center"
            android:textSize="@dimen/_22sdp"/>


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="@dimen/_16sdp"

            app:layout_constraintBottom_toTopOf="@id/ressetpasswordET"
            android:textAlignment="center"
            android:textSize="@dimen/_20sdp"
            android:fontFamily="@font/intermedium"
            android:text="Type in your email and follow furthure steps there to reset your password"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:id="@+id/resetPasswordTV"
            android:layout_marginTop="@dimen/_16sdp"/>

        <EditText
            app:layout_goneMarginTop="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginStart="25dp"
            android:paddingStart="10dp"
            android:hint="@string/email_address"
            android:textColorHint="@color/silver"
            android:layout_marginEnd="@dimen/_20sdp"
            android:textCursorDrawable="@drawable/cursor_drawable"
            app:layout_constraintTop_toBottomOf="@id/resetPasswordTV"
            android:layout_width="0dp"
            android:layout_height="@dimen/_42sdp"
            android:textColor="@color/white"
            android:layout_marginBottom="@dimen/_16sdp"
            android:background="@drawable/edit_text_outline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/ressetpasswordET"/>






    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>