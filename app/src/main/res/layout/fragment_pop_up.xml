<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_15sdp"
    android:background="@drawable/gradiant_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/imageg"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_110sdp"
        android:src="@drawable/coin"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dismissButton"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/intersemibold"
        app:layout_constraintTop_toBottomOf="@id/imageg"
        android:id="@+id/whiteText"
        android:text="Nafsafasfasfasfasfasfasfasfme"
        android:textSize="@dimen/_21sdp"
        android:textAlignment="center"
        android:textColor="@color/white"

        android:textStyle="italic"
        android:layout_marginTop="@dimen/_10sdp"
        />
    <TextView
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/whiteText"
        android:id="@+id/grayText"
        android:fontFamily="@font/interthin"
        android:text="Description stuff \n and more stuff"
        android:layout_margin="@dimen/_10sdp"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintBottom_toTopOf="@id/applyButton"
        android:lines="3"
        android:textColor="@color/gray"
        android:textStyle="italic"
        android:layout_marginTop="@dimen/_10sdp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="@dimen/_20sdp"
        android:layout_margin="@dimen/_5sdp"
        android:layout_height="@dimen/_20sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@color/white"
        android:background="@android:drawable/ic_menu_close_clear_cancel"
        android:id="@+id/dismissButton"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="0dp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_height="@dimen/_40sdp"
        android:id="@+id/applyButton"
        android:layout_marginTop="@dimen/_19sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Become Premium member"
        android:layout_marginBottom="@dimen/_20sdp"
        app:layout_constraintTop_toBottomOf="@id/grayText"
        android:textColor="@color/white"
        android:background="@drawable/blue_button"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>